fn (Syscall) SysSetUID { tf -- ok }
	auto p
	CurrentThread@ Thread_Process + @ p!

	auto tuid
	tf@ Context_a1 + @ tuid!

	0 ok!

	if (p@ Process_UID + @ tuid@ ==)
		tuid@ p@ Process_EUID + !
	end elseif (p@ Process_EUID + @ tuid@ ==)
		tuid@ p@ Process_UID + !
	end elseif (p@ Process_EUID + @ 0 ==) (* root can do whatever she wants *)
		tuid@ p@ Process_UID + !
		tuid@ p@ Process_EUID + !
	end else
		-EPERM ok!
	end
end

