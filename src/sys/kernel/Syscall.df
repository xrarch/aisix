const STRMAX 512

fn private GetString { user len -- str }
	if (user@ ~~)
		-EINVAL str!
		return
	end

	if (len@ STRMAX >=)
		-E2BIG str!
		return
	end

	auto p
	CurrentThread@ Thread_Process + @ Process_Pagemap + @ p!

	len@ 1 + Calloc str!

	if (str@ iserr)
		return
	end

	auto ok
	p@ str@ user@ len@ VMStrnCopyin ok!

	if (ok@ iserr)
		str@ Free
		ok@ str!
	end
end

