fn (Syscall) SysNextProcessInfo { tf -- ok }
	auto i
	tf@ Context_a1 + @ i!

	auto prstat
	tf@ Context_a2 + @ prstat!

	auto su
	CurrentThread@ Thread_Process + @ Process_EUID + @ 0 == su!

	auto uid
	CurrentThread@ Thread_Process + @ Process_UID + @ uid!

	auto process
	0 process!

	while (i@ PROCMAX <)
		auto rs
		InterruptDisable rs!

		[i@]Processes@ process!

		if (process@)
			if (process@ Process_UID + @ uid@ == su@ ||)
				rs@ InterruptRestore

				prstat@ process@ ProcessInfo ok!

				if (ok@ iserr)
					return
				end

				i@ 1 + ok!

				return
			end
		end

		rs@ InterruptRestore

		1 i +=
	end

	-ESRCH ok!
end

